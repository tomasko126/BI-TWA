{% extends "layout.html.twig" %}

{% block title %}
    Vytvorenie zamestnanca
{% endblock %}

{% block headscripts %}
    <link rel="stylesheet" href="/css/general.css">
{% endblock %}

{% form_theme form 'form.html.twig' %}

{% block content %}
    <main id="content" class="uk-container uk-flex uk-flex-center">
        <article id="newEmployeeForm" class="uk-card uk-card-default uk-card-small uk-width-large uk-margin-top">
            <section class="uk-card-header uk-flex uk-flex-center">
                <h3 class="uk-card-title uk-margin-remove-top">
                    Vytvorenie zamestnanca
                </h3>
            </section>
            <section class="uk-card-body">
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.email) }}
                {{ form_row(form.roles) }}
                {{ form_row(form.phone) }}
                {{ form_row(form.web) }}
                {{ form_row(form.room) }}
            </section>
            <section class="uk-card-footer">
                {{ form_row(form.save) }}
                {{ form_end(form) }}
            </section>
        </article>
    </main>
{% endblock %}